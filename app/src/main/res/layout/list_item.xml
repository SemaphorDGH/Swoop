<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is row number 15"
        android:id="@+id/userName"
        android:layout_toEndOf="@+id/profilePic" />

    <TextView
        android:id="@+id/userQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/profilePic"
        android:text="This is row number 15" />

    <Button
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profilePic"
        android:layout_marginStart="15dp"
        android:text="New Text" />

    <Button
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/option3"
        android:layout_alignBottom="@+id/option3"
        android:layout_centerHorizontal="true"
        android:text="New Text" />

    <Button
        android:id="@+id/option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/option1"
        android:layout_alignBottom="@+id/option1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="New Text" />

</RelativeLayout>